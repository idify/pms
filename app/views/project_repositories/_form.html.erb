
<%= form_for([@project, @project_repository])  do |f| %>

  <% if @project_repository.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
       <div style="clear:both;"></div>
       <ul>
         <% for message in @project_repository.errors.full_messages %>
           <li><%= message %></li>
         <% end %>
      </ul>
    </div>
    <% end %>
  <div>
    <p>
      <%=f.label :title %>
      <%=f.text_field :title %>
    </p>
    <p>
      <%= f.file_field :document %>
    </p>
    <p>
       <%= f.label :document_url, " Document URL" %>
       <%= f.text_field :document_url %>
    </p>
    <p>
       <%= f.submit "Submit" , class: "btn" %>
       <%= link_to "Cancel" , project_project_repositories_path(@project), class: "btn" %>
    </p>
  </div>
<% end %>





